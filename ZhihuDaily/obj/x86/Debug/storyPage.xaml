<Page
    x:Class="ZhihuDaily.storyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZhihuDaily"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='1' x:Name="header" Background="BlueViolet">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" >
                <AppBarButton x:ConnectionId='21' x:Name="btn_Back" Icon="Back"                Width="48" Foreground="White" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <AppBarButton x:ConnectionId='15' x:Name="share" Icon="Refresh" Width="48" Foreground="White"                 />
                <AppBarButton x:ConnectionId='16' x:Name="star" Icon="Favorite" Width="48"                     Foreground="White" />
                <AppBarButton x:ConnectionId='17' x:Name="comments" Icon="Comment" Width="34"                    Foreground="White" />
                <TextBlock x:ConnectionId='18' x:Name="comments_count"  FontSize="14" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,10,0" />
                <AppBarButton x:ConnectionId='19' x:Name="upvote" Icon="Like" Width="34" Margin="0,0,0,0" Foreground="White" />
                <TextBlock x:ConnectionId='20' x:Name="like_count" FontSize="14" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,0,10,0" />
            </StackPanel>
        </Grid>
        <Border x:ConnectionId='2' Name="loading" Grid.Row="1" Margin="50,0">
            <ProgressBar IsIndeterminate="True" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" />
        </Border>

        <SplitView x:ConnectionId='3' x:Name="splitView" Grid.Row="1" OpenPaneLength="220" CompactPaneLength="0" PaneBackground="BlueViolet" DisplayMode="CompactOverlay" Foreground="White" >
            <WebView x:ConnectionId='5' x:Name="wv" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="auto" />
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel x:ConnectionId='6' x:Name="profile_pane">

                        <ListView x:ConnectionId='11' IsItemClickEnabled="True"                   >
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <AppBarButton x:ConnectionId='14' x:Name="home" Icon="Home" Height="48" Width="48" Margin="-12,0,0,0" Foreground="White"                />
                                    <TextBlock Grid.Column="1" Text="首页" FontSize="16" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="White" />
                                </Grid>
                            </ListViewItem>
                        </ListView>
                        <ListView x:ConnectionId='12' IsItemClickEnabled="True"                       >
                            <ListViewItem>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <AppBarButton x:ConnectionId='13' x:Name="favorite" Icon="Favorite" Height="48" Width="48" Margin="-12,0,0,0" Foreground="White"                    />
                                    <TextBlock Grid.Column="1" Text="收藏" FontSize="16" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="White" />
                                </Grid>
                            </ListViewItem>
                        </ListView>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                        <StackPanel x:ConnectionId='9' x:Name="list_Pane" >
                            <ListView x:ConnectionId='10' x:Name="list_section" IsItemClickEnabled="True"                      >
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="48" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="1" Text="{Binding Name}" FontSize="14" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="White" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <AppBarSeparator RenderTransformOrigin="0.5,0.5" Margin="0,0,0,0" Foreground="White" >
                                <AppBarSeparator.RenderTransform>
                                    <CompositeTransform Rotation="90"/>
                                </AppBarSeparator.RenderTransform>
                            </AppBarSeparator>
                        </Grid>

                        <ListView x:ConnectionId='7' x:Name="setting_pane" IsItemClickEnabled="True"                       >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <AppBarButton x:ConnectionId='8' x:Name="btn_Setting" Icon="Setting" Height="48" Width="48" Margin="-12,0,0,0" Foreground="White"                   />
                                <TextBlock Grid.Column="1" Text="设置" FontSize="16" VerticalAlignment="Center" Margin="25,0,0,0" Foreground="White" />
                            </Grid>
                        </ListView>
                    </StackPanel>
                </Grid>
            </SplitView.Pane>
        </SplitView>

        <Button x:ConnectionId='4' Name="add_favorite_OK" Grid.Row="1" 
                Content="收藏成功" Foreground="White" FontSize="12" Width="200" Height="50" Background="LightGray"
                Margin="50,450,50,100" HorizontalAlignment="Center"
                                 Visibility="Collapsed" />

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Value="750" Target="wv.Width" />
                        <Setter Value="48" Target="splitView.CompactPaneLength" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</Page>


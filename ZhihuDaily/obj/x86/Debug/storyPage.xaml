<Page
    x:Class="ZhihuDaily.storyPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZhihuDaily"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:ConnectionId='1' x:Name="header" Background="LightBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" >
                <AppBarButton x:ConnectionId='8' x:Name="btn_Back" Icon="Back"                 Width="48" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <AppBarButton x:ConnectionId='3' x:Name="home" Icon="Home" Width="48"                 />
                <AppBarButton x:ConnectionId='4' x:Name="share" Icon="ReShare" Width="48" />
                <AppBarButton x:ConnectionId='5' x:Name="star" Icon="Favorite" Width="48" />
                <AppBarButton x:ConnectionId='6' x:Name="comments" Icon="Comment" Width="48"                     />
                <AppBarButton x:ConnectionId='7' x:Name="upvote" Icon="Like" Width="48" Margin="0,0,10,0" />
            </StackPanel>
        </Grid>
        <WebView x:ConnectionId='2' x:Name="wv" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="auto" />
    </Grid>
</Page>

